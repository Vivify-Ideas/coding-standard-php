<?xml version="1.0"?>
<ruleset name="Vivify">
 <description>The Vivify coding standard.</description>
 <arg name="tab-width" value="4"/>

 <!-- 2. General -->

 <!-- 2.1 Basic Coding Standard -->

 <!-- Include the whole PSR-2 standard -->
 <rule ref="PSR2"/>
 <rule ref="Vivify.Methods.MethodDeclaration"/>
 <rule ref="Vivify.Classes.ClassDeclaration.OpenBraceNewLine"/>
 <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
     <severity>0</severity>
 </rule>
 <rule ref="PSR2.Classes.ClassDeclaration.OpenBraceNewLine">
    <severity>0</severity>
 </rule>
</ruleset>
